#include <stdio.h>
#include <stdlib.h>
#define scanf(a,b) (fflush(0),scanf(a,b))
#define NUM 3 //入力する単語数
//		printf("%s\n", *(words + i));配列の使い方①
//		printf("%s\n", words[i]);配列の使い方②

//void sortNum(char (*words)[]){
