void sortNum(char (*words)[]){
  int i, j;
  char temp;
  printf("１つ目：%s\n", (*words)[0]);
  printf("２つ目：%s\n", (*words)[1]);
  printf("３つ目：%s\n", (*words)[2]);
  for(i = 0; i < (NUM - 1); i++){
    for(j = (NUM - 1); j > i; j--){
      if((*words)[j - 1] > (*words)[j]){
        temp = (*words)[j - 1];
        (*words)[j - 1] = (*words)[j];
        (*words)[j] = temp;
      }
    }
  }
}

int main(void) {
	char words[NUM][128];//words[単語数][文字数]
	printf("%dつの英単語を半角(a～z)で入力してください。\n", NUM);
	for(int i = 0; i < NUM; i++){
		printf("%dつ目：", i + 1);
		scanf("%s", words[i]);
	}
	sortNum(words);
	printf("ソート完了\n");

	for(int i = 0; i < NUM; i++){
		printf("%dつ目：%s\n", (i + 1), words[i]);
	}
	return EXIT_SUCCESS;
}

