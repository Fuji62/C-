/*
 ============================================================================
 Name        : gren1.c
 Author      : 藤本智哉
 Description : 会員簿のデータを構造体の配列に記憶させ、フリガナの昇順に出力する
 ============================================================================
 */

#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#define NUMBER 15 //会員の人数
#define NAME_LEN 128
#define KANA_LEN 128

struct Date{
	int year;
	int month;
	int day;
};

typedef struct{
	int id;
	char name[NAME_LEN];
	char kana[KANA_LEN];
	struct Date birthday;
}Human;

void kana_sort(Human *member){//バブルソートで昇順に並べ替える
	int i, j;
	char temp[128];
	for(i = 1; i < NUMBER; i++){
		for(j = 1; j < NUMBER; j++){
			if(strcmp(member[j - 1].kana, member[j].kana) > 0){
				strcpy(temp, member[j - 1].kana);
				strcpy(member[j - 1].kana, member[j].kana);
				strcpy(member[j].kana, temp);
			}
		}
	}
}

int main(void) {
	struct Date;
	Human member[] = {
		   //[id]   [name]         [kana]                   [birthday]
			{   91, "玉江 カタル", "タマエ カタル",         {2006, 8,13}},
			{  902, "榎本 剛",     "エノモト ツヨシ",       {2005, 9, 3}},
			{ 1903, "二神 龍太郎", "フタガミ リュウタロウ", {2007, 3,26}},
			{ 1904, "田中 良美",   "タナカ ヨシミ",         {2008, 6, 8}},
			{11905, "吉田 徹",     "ヨシダ トオル",         {2009, 2,11}},
			{11906, "高橋 純",     "タカハシ ジュン",       {2006, 7, 4}},
			{11907, "今田 隆弘",   "イマダ タカヒロ",       {2007, 8,23}},
			{11908, "鈴木 博",     "スズキ ヒロシ",         {2008, 6,19}},
			{20012, "浦野 晶子",   "ウラノ ショウコ",       {2009,10, 2}},
			{21301, "井上 篤志",   "イノウエ アツシ",       {2004, 7,19}},
			{33002, "倉石 美鈴",   "クライシ ミスズ",       {2008, 3,16}},
			{35039, "小野寺 健",   "オノデラ ケン",         {2007,12,24}},
			{37415, "山田 太朗",   "ヤマダ タロウ",         {2008, 5,15}},
			{40653, "浜崎 静香",   "ハマサキ シズカ",       {2006,11,19}},
			{41063, "藤田 由貴",   "フジタ ユキ",           {2005,10, 9}}
	};

	printf("【会員データ】\n");
	for(int i = 0; i < NUMBER; i++){
		printf("%2d.%s\n", i + 1, member[i].kana);
	}

	kana_sort(member);
	printf("\n会員名を昇順にソートしました。\n\n");

	for(int i = 0; i < NUMBER; i++){
		printf("%2d.%s\n", i + 1, member[i].kana);
	}

	return EXIT_SUCCESS;
}

//******************************************************************************
//出力結果
//******************************************************************************

